{
	"name": "simple-gateway",
	"version": "1.0.0",
	"description": "A lightweight API Gateway built with Hono.js and Bun for managing and proxying requests to various microservices.",
	"main": "src/index.ts",
	"author": "Wahyu Agus Arifin (ItPohgero) <wahyu@example.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ItPohgero/simple-gateway.git"
	},
	"keywords": [
		"itpohgero",
		"wahyu agus arifin",
		"api-gateway",
		"microservices",
		"proxy",
		"hono",
		"bun",
		"typescript"
	],
	"scripts": {
		"dev": "bun run --hot src/index.ts",
		"start": "bun src/index.ts",
		"build": "bun build src/index.ts --outdir dist",
		"type-check": "tsc --noEmit",
		"format": "bunx biome format --write",
		"format:check": "bunx biome format",
		"lint": "bunx biome lint --write",
		"lint:check": "bunx biome lint",
		"check": "bunx biome check --write",
		"check:ci": "bunx biome check",
		"fix": "bun run type-check && bunx biome check --write",
		"fix:all": "bunx biome check --write --unsafe",
		"test": "echo 'Add test command here'"
	},
	"dependencies": {
		"hono": "^4.9.9"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/bun": "latest",
		"typescript": "^5.9.2"
	},
	"engines": {
		"bun": ">=1.0.0",
		"node": ">=18.0.0"
	}
}
